{
  "name": "stream-limiter",
  "version": "0.1.10",
  "description": "A PassThrough stream that stops streaming after the specified number of bytes. Text streams are also counted at byte level. Object mode is not supported.",
  "main": "index.js",
  "scripts": {
    "postversion": "npm publish",
    "postpublish": "git push origin --all; git push origin --tags",
    "preversion": "npm test",
    "lint": "eslint --ext .js ./index.js",
    "test": "mocha test/tests.js"
  },
  "pre-commit": {
    "colors": true,
    "run": [
      "lint",
      "test"
    ],
    "silent": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heroqu/stream-limiter.git"
  },
  "keywords": [
    "stream",
    "limiter",
    "byte",
    "size",
    "passthrough"
  ],
  "author": "Heroqu",
  "license": "MIT",
  "dependencies": {
    "readable-stream": "^3.4.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "mocha": "^6.2.2"
  }
}
